<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.app.radiog" version="1.0.1">

	<name>Radio G</name>
	
	<description>
	Créée en 1981, dès l'avènement des radios libres, Radio G! a pour objectif de donner la parole à tous les angevins en privilégiant les moins représentés sur les ondes.
	</description>
	
	<author href="http://www.radio-g.fr/" email="prog.radiog@gmail.com">Radio G</author>
	<content src="index.html"/>
	
	<preference name="permissions" value="none"/>
	<preference name="orientation" value="default"/>
	<preference name="target-device" value="universal"/>
	<preference name="fullscreen" value="true"/>
	<preference name="webviewbounce" value="true"/>
	<preference name="prerendered-icon" value="true"/>
	<preference name="stay-in-webview" value="false"/>
	<preference name="ios-statusbarstyle" value="black-opaque"/>
	<preference name="detect-data-types" value="true"/>
	<preference name="exit-on-suspend" value="false"/>
	<preference name="show-splash-screen-spinner" value="true"/>
	<preference name="auto-hide-splash-screen" value="true"/>
	<preference name="disable-cursor" value="false"/>
	<preference name="android-minSdkVersion" value="7"/>
	<preference name="android-installLocation" value="auto"/>
	 
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	  
	<gap:plugin name="org.apache.cordova.console"/>
	<gap:plugin name="org.apache.cordova.device"/>
	<gap:plugin name="org.apache.cordova.device-orientation"/>
	<gap:plugin name="org.apache.cordova.splashscreen"/>
	<gap:plugin name="org.apache.cordova.camera"/>
	<gap:plugin name="org.apache.cordova.dialogs"/>
	<gap:plugin name="org.apache.cordova.vibration"/>
	<gap:plugin name="org.apache.cordova.inappbrowser"/>
	<gap:plugin name="org.apache.cordova.network-information"/>
	
	<icon src="images/logos/ios/57x57.png" gap:platform="ios" width="57" height="57" />
	<icon src="images/logos/ios/72x72.png" gap:platform="ios" width="72" height="72" />
	<icon src="images/logos/ios/114x144.png" gap:platform="ios" width="114" height="114" />
	<icon src="images/logos/ios/144x144.png" gap:platform="ios" width="144" height="144" />
	<icon src="images/logos/ios/76x76.png" gap:platform="ios" width="76" height="76" />
	<icon src="images/logos/ios/120x120.png" gap:platform="ios" width="120" height="120" />
	<icon src="images/logos/ios/152x152.png" gap:platform="ios" width="152" height="152" />
	<icon src="images/logos/android/36x36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/logos/android/48x48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/logos/android/72x72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/logos/android/96x96.png" gap:platform="android" gap:density="xhdpi" />
	<icon src="images/logos/android/144x144.png" gap:platform="android" gap:density="xxhdpi" />
	<icon src="images/logos/android/192x192.png" gap:platform="android" gap:density="xxxhdpi" />
	<icon src="images/logos/winphone/62x62.png" gap:platform="winphone" />
	<icon src="images/logos/winphone/173x173.png" gap:platform="winphone" gap:role="background" />
	<icon src="icon.png" />
	
	<gap:splash src="images/splash/iphone/320x480.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="images/splash/iphone/320x480-2.png" gap:platform="ios" width="480" height="320" />
	<gap:splash src="images/splash/iphone/640x960.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="images/splash/iphone/640x960-2.png" gap:platform="ios" width="960" height="640" />
	<gap:splash src="images/splash/iphone/640x1136.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="images/splash/iphone/640x1136-2.png" gap:platform="ios" width="1136" height="640" />
	<gap:splash src="images/splash/ipad/768x1024.png" gap:platform="ios" width="768" height="1024 " />
	<gap:splash src="images/splash/ipad/768x1024-2.png" gap:platform="ios" width="1024" height="768" />
	<gap:splash src="images/splash/ipad/1536x2048.png" gap:platform="ios" width="1536" height="2048" />
	<gap:splash src="images/splash/ipad/1536x2048-2.png" gap:platform="ios" width="2048" height="1536" />
	<gap:splash src="images/splash/android/240x400.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/splash/android/320x480.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/splash/android/480x800.png" gap:platform="android" gap:density="hdpi" />
